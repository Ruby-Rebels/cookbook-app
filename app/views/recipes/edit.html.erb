<h2 class="col-sm-offset-2">Edit your recipe</h2>

<%= form_tag("/recipes/#{@recipe.id}", method: "patch", class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag(:title, nil, class: 'control-label col-sm-2') %>
    <div class="col-sm-6">
      <%= text_field_tag(:title, @recipe.title, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:chef, nil, class: 'control-label col-sm-2') %>
    <div class="col-sm-6">
    <%= text_field_tag(:chef, @recipe.chef, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:ingredients, nil, class: 'control-label col-sm-2') %>
    <div class="col-sm-6">
    <%= text_field_tag(:ingredients, @recipe.ingredients, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:directions, nil, class: 'control-label col-sm-2') %>
    <div class="col-sm-6">
    <%= text_field_tag(:directions, @recipe.directions, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag(:prep_time, nil, class: 'control-label col-sm-2') %>
    <div class="col-sm-6">
    <%= text_field_tag(:prep_time, @recipe.prep_time, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag("Update your recipe", class: 'btn btn-default') %>
    </div>
  </div>
<% end %>
