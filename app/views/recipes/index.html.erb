<h1>Here are all your recipes!</h1>
<h4><%= link_to "Create a new recipe", "/recipes/new" %></h4>

<div class="row recipes-index">
  <% @recipes.each do |recipe| %>
    <a href="/recipes/<%= recipe.id %>">
      <div class="col-md-4 well">
        <h4>Title: <%= recipe.title %></h4>
        <h5>Chef: <%= recipe.user.name %></h5>
        <h6>Prep Time: <%= recipe.friendly_prep_time %></h6>
        <p>Created at: <%= recipe.friendly_created_at %></p>
        <img src="<%= recipe.image %>" alt="">
        <h5>Ingredients</h5>
        <ul>
          <% recipe.ingredients_list.each do |ingredient| %>
            <li><%= ingredient %></li>
          <% end %>
        </ul>

        <h5>Directions:</h5>
        <ol>
        <% recipe.directions_list.each do |direction| %>
          <li><%= direction %></li>
        <% end %>
      </ol>
      </div>
    </a>
  <% end %>
</div>
